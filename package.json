{
    "name": "harvtech-platform-api",
    "version": "1.0.0",
    "description": "The API to manage communication between other services in HarvTech.",
    "main": "./src/index.ts",
    "repository": "https://github.com/tech-warriors-corporation/harvtech-platform-api.git",
    "author": "Tech Warriors",
    "license": "CC0-1.0",
    "type": "commonjs",
    "private": false,
    "keywords": [
        "nodejs"
    ],
    "homepage": "https://github.com/tech-warriors-corporation/harvtech-platform-api#readme",
    "bugs": {
        "url": "https://github.com/tech-warriors-corporation/harvtech-platform-api/issues"
    },
    "engines": {
        "node": "20.x"
    },
    "scripts": {
        "prepare": "husky install",
        "db": "docker-compose up --build",
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/index.ts",
        "prod:build": "yarn && babel src --extensions \".ts\" --out-dir dist --copy-files --no-copy-ignored",
        "prod:start": "node ./dist/index.js",
        "lint": "npx eslint src",
        "lint:fix": "yarn lint --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "yarn prettier --write",
        "format": "yarn prettier:fix && yarn lint:fix",
        "test": "jest --clearCache && jest --passWithNoTests --runInBand",
        "test:watch": "yarn test --watch",
        "test:quiet": "yarn test --noStackTrace",
        "test:coverage": "yarn test:quiet && ts-node jest-open-coverage"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.5",
        "@babel/core": "^7.24.5",
        "@babel/node": "^7.23.9",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.24.7",
        "@babel/preset-env": "^7.24.5",
        "@babel/preset-typescript": "^7.24.1",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/koa": "^2.15.0",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa__cors": "^5.0.0",
        "@types/koa__router": "^12.0.4",
        "@types/node": "^20.14.2",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "axios-mock-adapter": "^1.22.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "pg": "^8.12.0",
        "prettier": "^3.2.5",
        "reflect-metadata": "^0.2.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.4",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typeorm": "^0.3.20",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@azure/storage-blob": "^12.17.0",
        "@koa/cors": "^5.0.0",
        "@koa/router": "^12.0.1",
        "axios": "^1.6.8",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.15.3",
        "koa-bodyparser": "^4.4.1"
    }
}
